{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": false,
    "module": "ESNext",
    "moduleResolution": "Node",
    
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "outDir": "./tmp",
    "typeRoots" : ["node_modules/@types", "react-app.d.ts"]
  },
  "watchOptions": {
    // Use native file system events for files and directories
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    // Poll files for updates more frequently
    // when they're updated a lot.
    "fallbackPolling": "dynamicPriority",
    // Don't coalesce watch notification
    "synchronousWatchDirectory": true,
    // Finally, two additional settings for reducing the amount of possible
    // files to track  work from these directories
    "excludeDirectories": ["**/node_modules", "_build"],
    "excludeFiles": ["build/fileWhichChangesOften.ts"]
  },
  
  "include": [
  "C:/base/work/webdev-projects/martin_sparstad_homepage/src/Components/footer.tsx", 
  "C:/base/work/webdev-projects/martin_sparstad_homepage/src/Components/linkBar.tsx",
  "C:/base/work/webdev-projects/martin_sparstad_homepage/src/Components/theme.tsx",
  "C:/base/work/webdev-projects/martin_sparstad_homepage/src/Components/logo.tsx",
  "C:/base/work/webdev-projects/martin_sparstad_homepage/src/Components/*",
  "src/**/*"],
  "exclude": ["img_server.cjs", "server.cjs"],
}